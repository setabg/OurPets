{% extends('base.html.twig')  %}

{% block body%}
    <h1>Добре дошли при нашите домашни любимци! </h1>

    {% if pets %}
    <h3>Ето ги и тях:</h3>
    <table class="table table-striped">
        <thead>
        <tr>
            <td>{{ 'Име' }}</td>
            <td>{{ 'Вид на животното' }}</td>
            <td>{{ 'Информация' }}</td>
            <td>{{ 'Дата на добявяне' }}</td>
        </tr>
        </thead>
        <tbody>
        {% for pet in pets %}
            <tr>
                <td>
                    {{ pet.name }}
                </td>
                <td>
                    {{ pet.petKind }}
                </td>
                <td>
                    {{ pet.petInfo }}
                </td>
                <td>
                    {{ pet.createdAt|format_datetime('short', 'none') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}